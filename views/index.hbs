<h1 class="f1 f-6-ns orange tc"><a class="orange no-underline" href="/">Hacktoberfest Checker</a></h1>

<div class="tc">
    <form action="/" class="form" method="get">
        <input class="input" type="text" name="username" placeholder="Github username" value="{{ username }}">
        <button class="button" type="submit">Check</button>
    </form>
</div>

<div class="pv4" id="results">
    {{#if error}}
        {{#if username}}
            {{> error}}
        {{/if}}
    {{else}}
        {{> prs}}
    {{/if}}
</div>
